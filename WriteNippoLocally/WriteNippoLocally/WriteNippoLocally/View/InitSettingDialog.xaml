<Window x:Class="WriteNippoLocally.View.InitSettingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WriteNippoLocally.View"
        mc:Ignorable="d"
        Title="InitSettingDialog" Height="450" Width="800">


    <StackPanel Margin="16">
        <TextBlock
            Text="サイトのURL" FontWeight="Bold" FontSize="16"
            Margin="0 16 0 4"
        />
        <TextBox 
            Text="{Binding SiteUrl}" FontSize="16"
            Margin="0 4"
         />

        <TextBlock
            Text="格納先パス" FontWeight="Bold" FontSize="16"
            Margin="0 16 0 4"
        />

        <Button 
            Content="フォルダを選択" 
            Width="120" Padding="4" Margin=" 0 4"
            HorizontalAlignment="Left"
            Command="{Binding SelectFolder}"
        />
        <TextBox
            Text="{Binding DestDirectory}" FontSize="16"
            Margin=" 0 4"
        />
        
        <Button 
            Content="OK" 
            Width="120" Padding="4"
            Margin=" 0 16"
            HorizontalAlignment="Right"
            Command="{Binding StoreSettings}"
        />
    </StackPanel>
</Window>

<Window x:Class="NippoWriter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NippoWriter"
        mc:Ignorable="d"
        Title="Nippo Writer" Height="800" Width="720" FontSize="14"
        Loaded="OnWindowLoaded"
        Activated="OnWindowActivated"
        Deactivated="OnWindowDeactived"
>
    <Window.Resources>
        <Style x:Key="FocusHandlingTextBoxStyle" TargetType="TextBox">
            <EventSetter Event="LostFocus" Handler="OnLostForcus" />
        </Style>
        <Style x:Key="SelectionHandlingComboBoxStyle" TargetType="ComboBox">
            <EventSetter Event="SelectionChanged" Handler="OnSelectionChanged" />
        </Style>
    </Window.Resources>

    <ScrollViewer>
        <Grid Margin="16 16 0 16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button 
                Grid.Column="0" Grid.Row="0"
                Width="40" Height="40" Padding="8" Margin="16" 
                Background="Transparent" BorderThickness="0"
                Command="{Binding SelectPrevDate}"
             >
                <Image Source="/Resource/LeftArrow.png" />
            </Button>
            <TextBlock 
                Grid.Column="1" Grid.Row="0"
                MinWidth="210"
                Text="{Binding FileName}" FontSize="18" FontWeight="Bold" TextAlignment="Center"
                VerticalAlignment="Center" HorizontalAlignment="Center"
            />
            <Button 
                Grid.Column="2" Grid.Row="0"
                Width="40" Height="40" Padding="8" Margin="16" 
                Background="Transparent" BorderThickness="0"
                Command="{Binding SelectNextDate}"
            >
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Visibility" Value="Hidden"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Image Source="/Resource/RightArrow.png" />
            </Button>

            <Button 
                Grid.Column="4" Grid.Row="0" 
                Width="40" Height="40" Padding="4" Margin="16"
                 Background="Transparent" BorderThickness="0"
                Command="{Binding ShowUserSettingDialog}"
             >
                <Image Source="/Resource/Settings.png" />
            </Button>

            <StackPanel Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="1" >
                <ItemsControl ItemsSource="{Binding Report[0].Fields}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock 
                                    Text="{Binding Title}" FontWeight="Bold" FontSize="18" 
                                />
                                <ContentControl Content="{Binding}" IsTabStop="False">
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Type}" Value="Note">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <TextBox 
                                                                    Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"  
                                                                    TextWrapping="Wrap"
                                                                    AcceptsReturn="True"
                                                                    MinHeight="64"
                                                                    Style="{StaticResource FocusHandlingTextBoxStyle}"
                                                                />
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Text">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <TextBox 
                                                                    Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}" 
                                                                    Style="{StaticResource FocusHandlingTextBoxStyle}"
                                                                />
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Choice">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <ComboBox 
                                                                    ItemsSource="{Binding Choices, UpdateSourceTrigger=PropertyChanged}" 
                                                                    SelectedItem="{Binding Content}" 
                                                                    Style="{StaticResource SelectionHandlingComboBoxStyle}"
                                                                />
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button 
                Width="72" Height="39" Padding="8" Margin="16" 
                HorizontalAlignment="Right"
                Content="送信"
                Command="{Binding SendDailyReport}"
                />
            </StackPanel>
        </Grid>
    </ScrollViewer>

</Window>
